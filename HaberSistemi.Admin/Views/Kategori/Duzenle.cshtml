@model HaberSistemi.Core.Dto.KategoriDTO
@{
    ViewBag.Title = "Kategori Düzenle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}


<div class="container-fluid">
    <!-- Basic form -->
    <div class="row">
        <div class="col-md-12">
            <div class="panel panel-default">
                <header class="panel-heading">@ViewBag.Title</header>
                <div class="panel-body">
                    <form role="form">
                        @Html.HiddenFor(x => Model.Id)
                        <div class="form-group">
                            <label for="exampleInputEmail1">Üst Kategori</label>
                            @Html.DropDownListFor(x => x.ParentID, new SelectList(ViewBag.Kategori, "Id", "KategoriAdi"),
                           "Seçiniz", new { @class = "form-control", id = "ParentID" })
                        </div>
                        <div class="form-group">
                            <label for="kategoriAdi">Kategori Adı</label>
                            @Html.TextBoxFor(x => x.KategoriAdi, new { @class = "form-control", id = "kategoriAdi", placholder = "Kategori Adı" })
                        </div>
                        <div class="form-group">
                            <label for="exampleInputPassword1">Kategori Url</label>
                            @Html.TextBoxFor(x => x.URL, new { @class = "form-control", id = "kategoriAdi", placholder = "Kategori Adı" })
                        </div>
                        <div class="checkbox">
                            <label>
                                @if (Model != null && Model.AktifMi == true)
                                {
                                    <input type="checkbox" checked id="kategoriAktifMi"> 
                                }
                                else
                                {
                                    <input type="checkbox" id="kategoriAktifMi"> 
                                }
                                Aktif Mi?
                            </label>
                        </div>
                        <a href="javascript:void();" class="btn btn-default" onclick="KategoriDuzenle()">Kaydet</a>
                        @*<button type="submit" class="btn btn-default">Submit</button>*@
                    </form>

                </div>
            </div>
        </div>
    </div>
    <!-- /Basic form -->

</div>
